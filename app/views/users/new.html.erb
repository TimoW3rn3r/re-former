<% if @user.errors.any? %>
  <div class="error_explanation">
    <div id="error">
      <%= @user.errors.first.full_message %>
    </div>
  </div>
<% end %>

<%= form_with model: @user, method: :post do |form| %>
  <%= form.label :username, "Your user name here" %>
  <%= form.text_field :username, value: "default_user#{rand(1..1000)}" %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.submit "Submit" %>
<% end %>
